<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyamsoft.wordwiz">

  <!-- For Billing Service -->
  <uses-permission android:name="com.android.vending.BILLING"/>

  <application
      android:name=".WordWiz"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/Theme.WordWiz.Light">

    <activity
        android:name=".app.main.MainActivity"
        android:excludeFromRecents="false"
        android:exported="true"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:noHistory="false"
        android:theme="@style/Theme.WordWiz.Light.Splash"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- Crash Log Provider -->
    <provider
        android:name="android.support.v4.content.FileProvider"
        android:authorities="com.pyamsoft.wordwiz.crash.LOG_PROVIDER"
        android:exported="false"
        android:grantUriPermissions="true">
      <meta-data
          android:name="android.support.FILE_PROVIDER_PATHS"
          android:resource="@xml/crashlog_provider"/>
    </provider>

  </application>

</manifest>