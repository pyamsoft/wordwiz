<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pyamsoft.wordwiz">

  <!-- For Billing Service -->
  <uses-permission android:name="com.android.vending.BILLING"/>

  <application
      android:name=".WordWiz"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/Theme.WordWiz.Light">

    <!-- Remove the Google API activity -->
    <activity
        android:name="com.google.android.gms.common.api.GoogleApiActivity"
        tools:node="remove"/>

    <activity
        android:name=".app.main.MainActivity"
        android:excludeFromRecents="false"
        android:exported="true"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:noHistory="false"
        android:theme="@style/Theme.WordWiz.Light.Splash"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".app.word.count.WordCountActivity"
        android:enabled="false"
        android:excludeFromRecents="false"
        android:exported="true"
        android:label="@string/label_word_count"
        android:launchMode="singleTop"
        android:noHistory="false"
        android:theme="@style/Theme.WordWiz.Light.Transparent"
        >

      <intent-filter>
        <action android:name="android.intent.action.PROCESS_TEXT"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <data android:mimeType="text/plain"/>
      </intent-filter>
    </activity>

    <provider
        android:name=".WordWizSingleInitProvider"
        android:authorities="com.pyamsoft.wordwiz.WordWizSingleInitProvider"
        android:exported="false"
        android:syncable="false"/>

  </application>

</manifest>