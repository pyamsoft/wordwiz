<resources>

    <style name="Base.Theme.WordWiz" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="dialogTheme">@style/Theme.WordWiz.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.WordWiz.Dialog.Alert</item>

        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Base.Theme.WordWiz.Dialog" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Base.Theme.WordWiz.Dialog.Alert" parent="@style/Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Base.Theme.WordWiz.Splash" parent="@style/Base.Theme.WordWiz">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Base.Theme.WordWiz.Transparent" parent="@style/Base.Theme.WordWiz">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
